<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/tv_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="164dp"
        android:layout_marginTop="47dp"
        android:text=""
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ev_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_01"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="164dp"
        android:layout_marginTop="98dp"
        android:hint="type your answer here"
        android:cursorVisible="false"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ev_01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp"
        android:background="#10E07A"
        android:textStyle="bold"
        android:text="VALIDATE"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/bt_ngame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_validate"
        android:layout_alignStart="@+id/bt_validate"
        android:layout_marginTop="76dp"
        android:background="#16B1F5"
        android:text="NEW GAME"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>